<div class="container">
    <div class="heading-container">
        <img src="./assets/img/burger.png" alt="A Burger">
        <h1>Eat Da Burger!</h1>
    </div>
    <div class="waiting">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        <tr>
                            <td>{{burger_name}}</td>
                            <td><button class="eatThis" value={{id}}>Eat this burger!</button></td>
                        </tr>
                    {{/unless}}
                {{/each}}
            </table>
    </div>
    <div class="eaten">
        <table>
                {{#each burgers}}
                    {{#if devoured}}
                        <tr>
                            <td>{{burger_name}}</td>
                        </tr>
                    {{/if}}
                {{/each}}
            </table>
    </div>
    <div class="input">
        <form>
            <input type="text" name="burger"><br>
            <button type="submit">Add My Burger!</button>
        </form>
    </div>
</div>